/* 头部轮播图样式 */
.swiper-container {
  position: relative;
}
swiper {
  height: 300rpx;
}
.swiper-container .slide-image {
  width: 100%;
  height: 100%;
}

.swiper-container .dots {
  position: absolute;
  left: 0;
  right: 0;
  bottom: 15rpx;
  display: flex;
  justify-content: center;
}

.swiper-container .dots .dot {
  margin: 0 8rpx;
  width: 16rpx;
  height: 16rpx;
  background: #ccc;
  border-radius: 8rpx;
  transition: all 0.6s;
  opacity: 0.5;
}

.swiper-container .dots .dot.active {
  background: #000;
}